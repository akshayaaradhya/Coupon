{% extends '::backend.html.twig' %}

{% block id 'user' %}
{% block title %}{{ entity }} user{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>


<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ entity.surname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ entity.password }}</td>
        </tr>
        <tr>
            <th>Salt</th>
            <td>{{ entity.salt }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>Subscribed</th>
            <td>{{ entity.subscribed ? 'yes' : 'no' }}</td>
        </tr>
        <tr>
            <th>Signed up</th>
            <td>{{ entity.createdAt|fecha('long', 'medium') }}</td>
        </tr>
        <tr>
            <th>Birthday</th>
            <td>{{ entity.birthday|fecha('long') }}</td>
        </tr>
        <tr>
            <th>PIN</th>
            <td>{{ entity.pin }}</td>
        </tr>
        <tr>
            <th>Credit card</th>
            <td>{{ entity.creditCard }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_user') }}">
            Back to list
        </a>
    </li>
    <li>
        <a href="{{ path('backend_user_edit', { 'id': entity.id }) }}">
            Edit user
        </a>
    </li>
    <li>
        <form action="{{ path('backend_user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete user</button>
        </form>
    </li>
</ul>
{% endblock %}
