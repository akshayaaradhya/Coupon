{% extends '::backend.html.twig' %}

{% block id 'store' %}
{% block title %}Stores list{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="records_list narrow">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_store_show', { 'id': entity.id }) }}">Details</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_store_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a class="button" href="{{ path('backend_store_new') }}">
            Add a new store
        </a>
    </li>
</ul>
{% endblock %}
