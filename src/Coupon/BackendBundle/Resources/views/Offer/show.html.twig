{% extends '::backend.html.twig' %}

{% block id 'Offer' %}
{% block title %}{{ entity }} offer{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Terms</th>
            <td>{{ entity.terms }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td><img src="{{ asset(images_dir ~ entity.photo) }}" /></td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ entity.price }} &euro;</td>
        </tr>
        <tr>
            <th>Discount</th>
            <td>{{ entity.discount }} &euro;</td>
        </tr>
        <tr>
            <th>Published</th>
            <td>{{ entity.publishedAt|fecha('long', 'medium') }}</td>
        </tr>
        <tr>
            <th>Expired</th>
            <td>{{ entity.expiredAt|fecha('long', 'medium') }}</td>
        </tr>
        <tr>
            <th>Purchases</th>
        <td>{{ entity.purchases }}</td>
        </tr>
        <tr>
            <th>Purchases required</th>
            <td>{{ entity.minimum }}</td>
        </tr>
        <tr>
            <th>Approved</th>
            <td>{{ entity.approved ? 'yes' : 'no' }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>Store</th>
            <td>{{ entity.store }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_offer') }}">
            Back to list
        </a>
    </li>
    <li>
        <a href="{{ path('backend_offer_edit', { 'id': entity.id }) }}">
            Edit offer
        </a>
    </li>
    <li>
        <form action="{{ path('backend_offer_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete offer</button>
        </form>
    </li>
</ul>
{% endblock %}
